  <script>
    // year
    document.getElementById('year').textContent = new Date().getFullYear();
    // mobile menu toggle
    const btn = document.getElementById('menuBtn');
    const menu = document.getElementById('mobileMenu');
    btn?.addEventListener('click', ()=> menu.classList.toggle('hidden'));

    // TODO: 여기에 실제 링크 연결 (텔레그램/브리핑룸/세팅 가이드 등)
    const TELEGRAM_LINK = '#'; // 예: https://t.me/your_channel
    document.querySelectorAll('#cta-telegram-top, #cta-telegram-top-m, #cta-telegram-hero, #cta-telegram-services, #link-telegram').forEach($=>{
      $.setAttribute('href', TELEGRAM_LINK);
      $.setAttribute('target', '_blank');
      $.setAttribute('rel', 'noopener');
    });
